{
    "policyRule": {
        "if": {
            "not": {
                "field": "Microsoft.Compute/virtualMachines/sku.name",
                "in": [
                    "Standard_B1ms",
                    "Standard_B1s",
                    "Standard_D1_v2",
                    "Standard_F1s"
                ]
            }
        },
        "then": {
            "effect": "deny"
        }
    }
}
